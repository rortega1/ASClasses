package {		import flash.display.Sprite;	import flash.net.URLRequest;	import flash.net.URLLoader;	import fl.controls.TextArea;	import flash.text.TextField;	import flash.events.Event;	public class XMLParse extends Sprite 	{		private var address:String;		private var xml:XMLList;		private var myText:String;		private var urlRequest:URLRequest;		private var urLoader:URLLoader;		public var textArea:TextArea;		public function XMLParse(url:String):void		{			address = url;			urlRequest = new URLRequest(address);			urLoader = new URLLoader();			urLoader.addEventListener(Event.COMPLETE, urLoader_complete);			urLoader.load(urlRequest);		}		private function urLoader_complete(evt:Event):void		{			xml = new XMLList(evt.currentTarget.data);			dispatchEvent ( new Event ( Event.COMPLETE ) )			this._myText = xml.toXMLString();		}		public function displayTextArea():void		{			trace("Entered the displayTextArea");			textArea = new TextArea();			trace(textArea);			textArea.move(5,5);			trace(myText);			textArea.htmlText = myText;			addChild(textArea);			trace("exit displayTextArea");		}				private function get _myText()		{			return myText;			trace(myText);		}				private function set _myText(txt:String)		{			myText = txt;					}	}}